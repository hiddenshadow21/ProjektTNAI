@model IEnumerable<Model.Entities.Author>

@{
    ViewBag.Title = "Autorzy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <link rel="stylesheet" href="~/Content/glowny.css" type="text/css" />

<h2>Lista autorów</h2>

<p>
    @Html.ActionLink("Dodaj autora", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.ActionLink("Edytuj", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Usuń", "Delete", new { id = item.ID }) |
        @Html.ActionLink("Informacje szczegółowe", "Details", new { id = item.ID })
    </td>
</tr>
}

</table>
