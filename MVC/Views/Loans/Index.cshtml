@model IEnumerable<Model.Entities.Loan>

@{
    ViewBag.Title = "Wypożyczenia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <link rel="stylesheet" href="~/Content/glowny.css" type="text/css" />

<h2>Lista wypożyczeń</h2>

<p>
    @Html.ActionLink("Dodaj wypożyczenie", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Book.Name)
        </th>
        <th>
            Wypożyczający
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoanStart)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Book.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Borrower.FirstName) @Html.DisplayFor(modelItem => item.Borrower.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoanStart)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Usuń", "Delete", new { id = item.ID }) |
            @Html.ActionLink("Informacje szczegółowe", "Details", new { id = item.ID })
        </td>
    </tr>
}

</table>
